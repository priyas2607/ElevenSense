# ============================
# SERVER CONFIG
# ============================
PORT=5000
CLIENT_ORIGIN=http://localhost:5173   # Your frontend dev URL

# ============================
# MONGODB
# ============================
# Example (Atlas):
# MONGO_URI=mongodb+srv://username:password@cluster0.mongodb.net/mydb
MONGO_URI=mongodb://127.0.0.1:27017/elevenSenseDB

# ============================
# REDIS
# ============================
# Local redis
REDIS_URL=redis://127.0.0.1:6379

# ============================
# JWT CONFIG
# ============================
JWT_ACCESS_SECRET=super_strong_random_key_1234
JWT_REFRESH_SECRET=super_strong_refresh_key_5678

# How long tokens last
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d

# Short-lived token used after verifying OTP
JWT_PRE_SIGNING_SECRET=super_short_lived_pre_token_secret

# Where the backend should read tokens from
TOKEN_SOURCES=header,cookie,query

# ============================
# COOKIES
# ============================
REFRESH_COOKIE_NAME=jid
COOKIE_HTTP_ONLY=true
COOKIE_SECURE=false       # Set to true in production (HTTPS)
COOKIE_SAME_SITE=lax

# ============================
# OTP SETTINGS
# ============================
OTP_TTL_SECONDS=600        # 10 minutes
OTP_MAX_ATTEMPTS=5

# ============================
# EMAIL / SMS (placeholders)
# These are optional for now
# ============================

# EMAIL SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email_user
SMTP_PASS=your_email_password

# SMS (Twilio)
TWILIO_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_FROM=+10000000000
